{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié - GM_Web My Ecommerce{% endblock %}

{% block content %}
    <div class="block-small">
        {% for message in app.flashes('info') %}
            <div class="alert alert-info text-center">{{ message }}</div>
        {% endfor %}
        <form method="post">

            <h1 class="h1 mb-3 font-weight-normal">Réinitialiser mon mot de passe</h1>
            <label for="inputEmail">Votre email</label>
            <input type="email" name="email" id="inputEmail" class="form-control" placeholder="Votre email" autocomplete="email" required autofocus>           

            <button class="btn btn-lg btn-info btn-block mt-3" type="submit" formnovalidate>
                Valider
            </button>
            <hr>
            <p class="text-center">Ou souhaitez-vous <a href="{{ path('app_login') }}">Vous connecter</a></p>
        </form>
    </div>
{% endblock %}
